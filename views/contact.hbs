<div class="container">
  <h2>Contact me</h2>

  {{#if isSent}}
    <div class="isSent">
      The message has been sent!<br>
      File {{ fileName }} has been saved!
    </div>
  {{/if}}
  {{#if isError}}
    <div class="isError">You can't leave fields empty!</div>
  {{/if}}

  <form class="formStyle" action="/contact/send-message" enctype="multipart/form-data" method="POST">
    <div class="oneRow">
      <label>
        Your name: <input type="text" name="author">
      </label>
      <label>
        Your email: <input type="email" name="sender">
      </label>
      <label>
        Title: <input type="text" name="title">
      </label>
      <label>
        Project design: <input type="file" name="projectDesign" accept="image/png, image/jpg, image/jpeg, image/gif">
      </label>
    </div>
    <label class="oneRow">
      <span>Message:</span> <textarea rows="10" name="message"></textarea>
    </label>
    <div>
      <button type="submit">Send message</button>
    </div>

  </form>

</div>